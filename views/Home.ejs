<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce Home</title>

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <link rel="stylesheet" href="/homepage.css">
</head>
<body>

<!-- ================= HEADER ================= -->
<header class="flipkart-header">
    <div class="header-container">

        <!-- LOGO -->
        <div class="logo-section">
            <img src="/images/" class="logo-img" alt="logo">
        </div>

        <!-- NAV ACTIONS -->
        <div class="nav-actions">

        <a href="<%= loggedIn ? '/profile' : '/usersignin' %>" class="nav-item">
            <i class="fa-regular fa-user"></i>

            <span>
                <% if (!loggedIn) { %>
                    Login / Signup
                <% } else { %>
                    <a href="/profile" style="text-decoration:none; color:inherit;">Profile</a>
                    /
                    <a href="/logout" style="text-decoration:none; color:inherit;">Logout</a>
                <% } %>
            </span>

            <i class="fa-solid fa-angle-down"></i>
        </a>




            <a href="orders.html" class="nav-item">
                <i class="fa-solid fa-box"></i>
                <span>Orders</span>
            </a>

            <a href="#" class="nav-item">
                <i class="fa-regular fa-bell"></i>
                <span>Notifications</span>
            </a>

            <a href="checkout.html" class="nav-item">
                <i class="fa-solid fa-cart-shopping"></i>
                <span>Cart</span>
            </a>

        </div>
    </div>
</header>

<!-- ================= PAGE WRAPPER ================= -->
<section class="homepage-bg">

    <!-- ================= CATEGORIES ================= -->
    <div class="page-section home-card">
        <nav class="category-nav">
            <div class="main-container category-container">
                <a href="/products/mobiles" class="category-item"><img src="/categories/mobileTablet.jpg"><span>Mobiles</span></a>
                <a href="/products/clothes" class="category-item"><img src="/categories/fashionProduct.jpg"><span>Fashion</span></a>
                <a href="/products/beauty" class="category-item"><img src="/categories/BeautyProduct.jpg"><span>Beauty & Accessories</span></a>
                <a href="/products/electronics" class="category-item"><img src="/categories/electronicsProduct.jpg"><span>Electronics</span></a>
                <a href="/products/appliances" class="category-item"><img src="/categories/tv.jpg"><span>TVs & Appliances</span></a>
            </div>
        </nav>
    </div>

    <!-- ================= HERO SLIDER ================= -->
    <div class="page-section home-card">
        <section class="hero-slider">
            <div class="main-container">
                <div class="slider-container">
                    <div class="slider-track">
                        <!-- 1st banner → Fashion page -->
                        <div class="slide" data-link="fashion.html">
                            <img src="/banners/Banner1.png" alt="Fashion Banner">
                        </div>

                        <!-- 2nd banner → Mobiles page -->
                        <div class="slide" data-link="mobiles.html">
                            <img src="/banners/Banner2.png" alt="Mobiles Banner">
                        </div>

                        <!-- 3rd banner → Fashion page -->
                        <div class="slide" data-link="fashion.html">
                            <img src="/banners/Banner3.png" alt="Fashion Banner">
                        </div>
                    </div>
                    <button class="slider-btn prev-btn" onclick="changeSlide(-1)">❮</button>
                    <button class="slider-btn next-btn" onclick="changeSlide(1)">❯</button>
                </div>
            </div>
        </section>
    </div>

    <!-- ================= TOP DEALS ================= -->
    <div class="page-section home-card">
        <section class="products-section">
            <div class="main-container">
                <div class="section-header">
                    <h2>Top Deals</h2>
                    <a href="products.html" class="view-all-btn">VIEW ALL</a>
                </div>

                <div class="products-carousel">
                    <% products.forEach(product=>{%>
                    
                    <div class="product-item">
                        <% if(product.productImages && product.productImages.length>0){%>
                        <img src="/uploads/products/<%= product.productImages[0].filename%>" alt="product images">
                        <%} else{%>
                            <img src="" alt="no image found">
                        <%}%>
                        <h3><%= product.productName %></h3>
                        <p class="discount">₹<%= product.price %></p>
                    </div>
                   <%})%>

                </div>

            </div>
        </section>
    </div>

    <!-- ================= FASHION DEALS ================= -->
    <div class="page-section home-card">
    <section class="fashion-deals-section">
        <div class="main-container">
            <h2 class="fashion-heading">Fashion's Top Deals</h2>

            <div class="fashion-deals-container">

                <!-- LEFT: SHOES & KURTI -->
                <div class="fashion-grid two-items">

                    <a href="fashion.html" class="fashion-link">
                        <div class="fashion-card">
                            <div class="fashion-img">
                                <img src="/products/Shoes.jpg" alt="Shoes">
                            </div>
                            <div class="fashion-info">
                                <h4>Shoes</h4>
                                <p>Min. 70% Off</p>
                            </div>
                        </div>
                    </a>

                    <a href="fashion.html" class="fashion-link">
                        <div class="fashion-card">
                            <div class="fashion-img">
                                <img src="/products/Kurti.jpg" alt="Women's Kurti">
                            </div>
                            <div class="fashion-info">
                                <h4>Women's Kurti</h4>
                                <p>Min. 60% Off</p>
                            </div>
                        </div>
                    </a>

                </div>

                <!-- RIGHT: PROMO CARD -->
                <a href="fashion.html" class="fashion-link promo-link">
                    <div class="fashion-promo">
                        <div class="promo-content">
                            <h3>Shop your fashion needs</h3>
                            <p>with Latest & Trendy Choices</p>
                            <button>Shop Now →</button>
                        </div>
                        <img src="/banners/fashionBanner.png" alt="Fashion Banner">
                    </div>
                </a>

            </div>
        </div>
    </section>
</div>


    <!-- ================= FOOTER ================= -->
    <div class="page-section home-card">
        <footer class="flipkart-footer">
            <div class="main-container">
                <div class="footer-container">
                    <div class="footer-column"><h4>ABOUT</h4><ul><li><a href="#">Contact Us</a></li><li><a href="#">About Us</a></li><li><a href="#">Careers</a></li><li><a href="#">Press</a></li></ul></div>
                    <div class="footer-column"><h4>HELP</h4><ul><li><a href="#">Payments</a></li><li><a href="#">Shipping</a></li><li><a href="#">Returns</a></li><li><a href="#">FAQ</a></li></ul></div>
                    <div class="footer-column"><h4>POLICY</h4><ul><li><a href="#">Return Policy</a></li><li><a href="#">Terms Of Use</a></li><li><a href="#">Security</a></li><li><a href="#">Privacy</a></li></ul></div>
                    <div class="footer-column"><h4>SOCIAL</h4><ul><li><a href="#">Facebook</a></li><li><a href="#">Twitter</a></li><li><a href="#">YouTube</a></li></ul></div>
                </div>
                <div class="footer-bottom"><p>© 2026 E-Commerce Platform</p></div>
            </div>
        </footer>
    </div>

</section>

<script src="/homepage.js"></script>
</body>
</html>

