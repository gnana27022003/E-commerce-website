<body>
  
  <h1>Add Product</h1>

  <form action="/add" method="post" enctype="multipart/form-data" onsubmit="return handleSubmit()">

    <!-- Product Name -->
    <label for="name">Product Name:</label>
    <input
      type="text"
      id="name"
      name="productName"
      required
      placeholder="Enter product name"
      oninput="validateProductName()"
    >
    <div id="nameError" class="error-message"></div>

   <!-- Product Category -->
<label for="service_type">Product Category:</label>
<select
  id="service_type"
  name="category"
  required
  onchange="validateCategory()"
>
  <option value="">-- Select Category --</option>
  <option value="clothes">Clothes</option>
  <option value="electronics">Electronics</option>
  <option value="mobiles">Mobile</option>
  <option value="appliances">Appliances</option>
  <option value="beauty">Beauty/Accessories</option>
</select>
<div id="serviceTypeError" class="error-message"></div>


    <!-- Stock -->
    <label for="pincode">Stock:</label>
    <input
      type="number"
      id="pincode"
      name="stock"
      required
      min="0"
      placeholder="Available stock"
      oninput="validateStock()"
    >
    <div id="pincodeError" class="error-message"></div>

   
<label for="pincode">Price:</label>
    <input
      type="number"
      id="pincode"
      name="price"
      required
      min="0"
      placeholder="Price in INR"
      oninput="validateStock()"
    >
    <div id="pincodeError" class="error-message"></div>

    <!-- Product Images -->
    <label for="previous_work">Product Images:</label>
    <input
      type="file"
      id="previous_work"
      name="productImages"
      accept="image/*"
      multiple
      required
      onchange="validateFileCount()"
    >
    <div id="fileError" class="error-message"></div>

    <!-- Product Details -->
    <label for="description">Product Details:</label>
    <textarea
      id="description"
      name="productDetails"
      rows="4"
      required
      placeholder="Enter product description"
    ></textarea>

    <div class="submit-btn-container">
      <button class="submit-btn" type="submit">Add Product</button>
    </div>

  </form>
<script>

  const errorMessage = <%- JSON.stringify(errorMessage || null) %>;
  const successMessage = <%- JSON.stringify(successMessage || null) %>;
  const redirectTo = <%- JSON.stringify(redirectTo || null) %>;

  if (errorMessage) {
    alert(errorMessage);
  }

  if (successMessage) {
    alert(successMessage);

    if (redirectTo) {
      setTimeout(() => {
        window.location.href = redirectTo;
      }, 50);
    }
  }


  function validateProductName() {
    const input = document.getElementById('name');
    const error = document.getElementById('nameError');
    const isValid = input.value.trim().length >= 3;
    error.textContent = isValid ? '' : 'Product name must be at least 3 characters.';
    return isValid;
  }


  function validateStock() {
    const stock = Number(document.getElementById('pincode').value);
    const error = document.getElementById('pincodeError');
    const isValid = stock >= 0;
    error.textContent = isValid ? '' : 'Stock cannot be negative.';
    return isValid;
  }

 

  function validateFileCount() {
    const files = document.getElementById('previous_work').files;
    const error = document.getElementById('fileError');
    const isValid = files.length > 0;
    error.textContent = isValid ? '' : 'Upload at least one product image.';
    return isValid;
  }

    function validateCategory() {
  const select = document.getElementById('service_type');
  const error = document.getElementById('serviceTypeError');
  const isValid = select.value !== '';
  error.textContent = isValid ? '' : 'Please select a product category.';
  return isValid;
}

  function handleSubmit() {
   
    
      validateProductName() &&
      validateStock() &&
      validateCategory()&&
      validateFileCount()
     




    
  }





</script>




