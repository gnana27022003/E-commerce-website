<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Payment - E-Commerce</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- CSS -->
    <link rel="stylesheet" href="../css/payment.css">
</head>

<body>

<!-- ================= HEADER ================= -->
<header class="flipkart-header">
    <div class="header-container">
        <div class="logo-section">
            <img src="../images/logo.png" class="logo-img" alt="logo">
        </div>
    </div>
</header>

<!-- ================= PAYMENT CONTAINER ================= -->
<div class="payment-wrapper">
    <div class="payment-container">

        <!-- ================= LEFT PAYMENT OPTIONS ================= -->
        <div class="payment-content">

            <div class="payment-header">
                <button class="back-btn" onclick="window.history.back()">
                    <i class="fa-solid fa-arrow-left"></i>
                </button>

                <h1>Complete Payment</h1>

                <div class="secure-badge">
                    <i class="fa-solid fa-shield-halved"></i>
                    <span>100% Secure</span>
                </div>
            </div>

            <!-- PAYMENT METHODS -->
            <div class="payment-methods">

                <!-- ===== UPI ===== -->
                <div class="payment-method-card active" id="upi-card">
                    <div class="method-header" onclick="selectPaymentMethod('upi')">
                        <i class="fa-solid fa-mobile-screen method-icon"></i>

                        <div class="method-info">
                            <h3>UPI</h3>
                            <p>Pay by any UPI app</p>
                            <p class="offers">Get upto ₹30 cashback • <strong>4 offers available</strong></p>
                        </div>
                    </div>

                    <div class="method-content" id="upi-content">

                        <div class="upi-option">
                            <input type="radio" name="upi-mode" id="upi-new" checked>
                            <label for="upi-new">Add new UPI ID</label>
                        </div>

                        <div class="upi-input-section">
                            <label>UPI ID</label>

                            <div class="input-with-button">
                                <input type="text" id="upi-id" placeholder="Enter UPI ID">
                                <button class="verify-btn">Verify</button>
                            </div>
                        </div>

                        <button class="pay-btn" id="upi-pay-btn">Pay ₹0</button>

                    </div>
                </div>

                <!-- ===== CARD ===== -->
                <div class="payment-method-card" id="card-card">

                    <div class="method-header" onclick="selectPaymentMethod('card')">
                        <i class="fa-regular fa-credit-card method-icon"></i>

                        <div class="method-info">
                            <h3>Credit / Debit / ATM Card</h3>
                            <p>Add and secure cards as per RBI guidelines</p>
                        </div>
                    </div>

                    <div class="method-content" id="card-content" style="display:none">

                        <div class="card-form">
                            <input type="text" id="card-number" placeholder="Card Number">
                            <input type="text" id="card-name" placeholder="Name on Card">

                            <div class="form-row">
                                <input type="text" id="card-expiry" placeholder="MM/YY">
                                <input type="text" id="card-cvv" placeholder="CVV">
                            </div>

                            <button class="pay-btn" id="card-pay-btn">Pay ₹0</button>
                        </div>

                    </div>
                </div>

                <!-- ===== COD ===== -->
                <div class="payment-method-card" id="cod-card">

                    <div class="method-header" onclick="selectPaymentMethod('cod')">
                        <i class="fa-solid fa-money-bill-wave method-icon"></i>

                        <div class="method-info">
                            <h3>Cash on Delivery</h3>
                        </div>
                    </div>

                    <div class="method-content" id="cod-content" style="display:none">
                        <button class="pay-btn" id="cod-pay-btn">Confirm Order</button>
                    </div>

                </div>

            </div>
        </div>

        <!-- ================= RIGHT SIDEBAR ================= -->
        <div class="price-details-sidebar">

            <div class="price-details-card">

                <h3>PRICE DETAILS</h3>

                <!-- MRP -->
                <div class="price-row">
                    <span>MRP (incl. of all taxes)</span>
                    <span id="mrp-total">₹0</span>
                </div>

                <!-- FEES -->
                <div class="price-row expandable" id="fees-toggle">
                    <span>Fees <i class="fa-solid fa-chevron-up"></i></span>
                </div>

                <div class="fees-breakdown" id="fees-breakdown">
                    <div class="price-row sub-row">
                        <span>Protect Promise Fee</span>
                        <span id="protect-fee">₹0</span>
                    </div>
                </div>

                <!-- DISCOUNT -->
                <div class="price-row expandable" id="discounts-toggle">
                    <span>Discounts <i class="fa-solid fa-chevron-up"></i></span>
                </div>

                <div class="discounts-breakdown" id="discounts-breakdown">
                    <div class="price-row sub-row discount">
                        <span>MRP Discount</span>
                        <span id="discount-total">-₹0</span>
                    </div>
                </div>

                <!-- TOTAL -->
                <div class="price-row total">
                    <span><strong>Total Amount</strong></span>
                    <span id="total-amount"><strong>₹0</strong></span>
                </div>

            </div>

        </div>

    </div>
</div>

<script src="../js/payment.js"></script>

</body>
</html>
