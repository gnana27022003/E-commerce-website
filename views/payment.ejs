<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Payment - E-Commerce</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- CSS -->
    <link rel="stylesheet" href="/payment.css">
    <link rel="stylesheet" href="/homepage.css">
</head>

<body>

<!-- ================= HEADER ================= -->
<%- include('header') %>

<!-- ================= PAYMENT CONTAINER ================= -->
<div class="payment-wrapper">
    <div class="payment-container">

        <!-- ================= LEFT PAYMENT OPTIONS ================= -->
        <div class="payment-content">

            <div class="payment-header">
                <button class="back-btn" onclick="window.history.back()">
                    <i class="fa-solid fa-arrow-left"></i>
                </button>

                <h1>Complete Payment</h1>

                <div class="secure-badge">
                    <i class="fa-solid fa-shield-halved"></i>
                    <span>100% Secure</span>
                </div>
            </div>

            <!-- PAYMENT METHODS -->
            <div class="payment-methods">

                <!-- ===== UPI ===== -->
                <label class="payment-method-card">
                    <input type="radio" name="paymentMethod" value="upi" checked>
                    <div class="method-info">
                    <h3>UPI</h3>
                    <p>Pay using any UPI app</p>
                    </div>
                </label>

                <!-- ===== CARD ===== -->
                <label class="payment-method-card">
                    <input type="radio" name="paymentMethod" value="card">
                    <div class="method-info">
                    <h3>Credit / Debit Card</h3>
                    <p>Visa, Mastercard, RuPay</p>
                    </div>
                </label>

                <!-- ===== COD ===== -->
                <label class="payment-method-card">
                    <input type="radio" name="paymentMethod" value="cod">
                    <div class="method-info">
                    <h3>Cash on Delivery</h3>
                    </div>
                </label>

                </div>

                <!-- ACTION AREA -->
                <form method="POST" action="/payment">
                <input type="hidden" name="paymentMethod" id="paymentMethodInput">

                <button type="submit" class="pay-action-btn" id="payBtn" disabled>
                    Pay Now
                </button>
                </form>


                <!-- dynamically filled -->
                </div>

        </div>

        <!-- ================= RIGHT SIDEBAR ================= -->
        <div class="price-details-sidebar">

            <div class="price-details-card">

                <h3>PRICE DETAILS</h3>

                <!-- MRP -->
                <div class="price-row">
                    <span>MRP (incl. of all taxes)</span>
                    <span>₹<%= product.price + 99 %></span>
                </div>

                <!-- FEES -->
                <div class="price-row expandable" id="fees-toggle">
                    <span>Fees <i class="fa-solid fa-chevron-up"></i></span>
                </div>

                <div class="fees-breakdown" id="fees-breakdown">
                    <div class="price-row sub-row">
                        <span>Protect Promise Fee</span>
                        <span>₹10</span>
                    </div>
                </div>

                

                <!-- TOTAL -->
                <div class="price-row total">
                    <span><strong>Total Amount</strong></span>
                    <span id="total-amoun"><strong>₹<%= product.price + 109 %></strong></span>
                </div>

            </div>

        </div>

    </div>
</div>

<script src="/payment.js"></script>
<script>
    
  

</script>
</body>
</html>
