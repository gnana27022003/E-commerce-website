<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - E-Commerce</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/orders.css">
    <link rel="stylesheet" href="/homepage.css">
</head>
<body>

    <!-- ================= HEADER ================= -->
    <%- include('header') %>

    <!-- ================= MAIN CONTENT ================= -->
    <section class="orders-main">
        
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-left">
                <h1><i class="fa-solid fa-box"></i> My Orders</h1>
                <p id="orders-count">Loading orders...</p>
            </div>
            <div class="header-right">
                <input type="text" id="search-orders" placeholder="Search your orders..." class="search-input">
            </div>
        </div>

        <div class="orders-container">
            
            <!-- Left: Filters -->
            <aside class="orders-sidebar">
                <div class="filter-card">
                    <h3>Filters</h3>
                    
                    <div class="filter-group">
                        <h4>Order Status</h4>
                        <label class="filter-option">
                            <input type="radio" name="status" value="all" checked onchange="filterOrders()">
                            <span>All Orders</span>
                        </label>
                        <label class="filter-option">
                            <input type="radio" name="status" value="processing" onchange="filterOrders()">
                            <span>Processing</span>
                        </label>
                        <label class="filter-option">
                            <input type="radio" name="status" value="shipped" onchange="filterOrders()">
                            <span>Shipped</span>
                        </label>
                        <label class="filter-option">
                            <input type="radio" name="status" value="delivered" onchange="filterOrders()">
                            <span>Delivered</span>
                        </label>
                        <label class="filter-option">
                            <input type="radio" name="status" value="cancelled" onchange="filterOrders()">
                            <span>Cancelled</span>
                        </label>
                    </div>

                    <div class="filter-group">
                        <h4>Order Time</h4>
                        <label class="filter-option">
                            <input type="radio" name="time" value="30" checked onchange="filterOrders()">
                            <span>Last 30 days</span>
                        </label>
                        <label class="filter-option">
                            <input type="radio" name="time" value="90" onchange="filterOrders()">
                            <span>Last 3 months</span>
                        </label>
                        <label class="filter-option">
                            <input type="radio" name="time" value="180" onchange="filterOrders()">
                            <span>Last 6 months</span>
                        </label>
                        <label class="filter-option">
                            <input type="radio" name="time" value="365" onchange="filterOrders()">
                            <span>Last year</span>
                        </label>
                    </div>

                    <button class="clear-filters-btn" onclick="clearFilters()">Clear All Filters</button>
                </div>
            </aside>

            <!-- Right: Orders List -->
            <div class="orders-list-section">
                
                <!-- Orders will be dynamically inserted here -->
                                    <div id="orders-list">
                                    <% if (orders && orders.length > 0) { %>

                        <% orders.forEach(order => { %>
                            <div class="order-card">

                                <!-- Order Header -->
                                <div class="order-header">
                                    <div class="order-info">
                                        <span class="order-id">Order: <%= order.orderId %></span>
                                        <span class="order-date">
                                            <i class="fa-solid fa-calendar"></i>
                                            <%= new Date(order.orderedAt).toLocaleDateString() %>
                                        </span>
                                    </div>

                                    <div class="order-status <%= order.orderStatus %>">
                                        <%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %>
                                    </div>
                                </div>

                                <!-- Product Section -->
                                <% order.items.forEach(item => { %>
                                    <div class="order-product">

                                        <div class="product-image">
                                            <img src="/uploads/products/<%= item.productImage %>" alt="<%= item.productName %>">

                                        </div>

                                        <div class="product-details">
                                            <h3><%= item.productName %></h3>
                                            <p>Quantity: <%= item.quantity %></p>
                                            <p class="price">₹ <%= item.price %></p>
                                        </div>

                                    </div>
                                <% }) %>

                            </div>
                        <% }) %>

                    <% } else { %>

                        <div class="empty-state">
                            <i class="fa-solid fa-box-open"></i>
                            <h2>No Orders Found</h2>
                        </div>

                    <% } %>


            </div>

        </div>  

    </section>

    <!-- ================= FOOTER ================= -->
    <footer class="flipkart-footer">
        <div class="footer-container">
            <div class="footer-column">
                <h4>ABOUT</h4>
                <ul>
                    <li><a href="#">Contact Us</a></li>
                    <li><a href="#">About Us</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h4>HELP</h4>
                <ul>
                    <li><a href="#">Payments</a></li>
                    <li><a href="#">Shipping</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h4>POLICY</h4>
                <ul>
                    <li><a href="#">Return Policy</a></li>
                    <li><a href="#">Terms Of Use</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h4>SOCIAL</h4>
                <ul>
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">Twitter</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>© 2026 E-Commerce Platform</p>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="/orders.js"></script>
</body>
</html>
